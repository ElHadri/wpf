<Window x:Class="CH05.ImageShapeWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CH05.ImageShapeWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        
        AllowsTransparency="True" 
        WindowStyle="None">

    <Window.Background>
        <ImageBrush ImageSource="Invader.png" />
    </Window.Background>

    <Grid MouseLeftButtonDown="OnMove" >
        <Ellipse Fill="Transparent" Margin="157,42,133,92"/>
        <Button Content="X" Click="OnClose" HorizontalAlignment="Center" FontWeight="Bold" VerticalAlignment="Top" Margin="0,50,100,0" FontSize="16" />
    </Grid>
</Window>
